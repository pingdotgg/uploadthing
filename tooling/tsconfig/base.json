{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    // "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",

    "baseUrl": "../..",
    "paths": {
      "@uploadthing/*": ["packages/*/src"],
      "uploadthing": ["packages/uploadthing/src"],
      /** Packages with multiple entrypoints must have a second matcher since you can only have 1 * per pattern... */
      "@uploadthing/dropzone/*": ["packages/dropzone/src/*"],
      "@uploadthing/mime-types/*": ["packages/mime-types/src/*"],
      "@uploadthing/react/*": ["packages/react/src/*"],
      "@uploadthing/solid/*": ["packages/solid/src/*"],
      "uploadthing/*": ["packages/uploadthing/src"]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
